<p style="color: green"><%= notice %></p>
<div class="flex items-center justify-between mb-8">
  <h1 class="main-title">
    Accounts
  </h1>
  <%= link_to "New account", new_account_path, class: "btn-primary" %>
</div>
<div id="accounts" class="grid grid-cols-2 grid-rows-2 gap-5">
  <% @accounts.each do |account| %>
    <div class="mb-5">
      <%= render  partial: "card", locals: { account: account }  %>
    </div>
  <% end %>
</div>
