<p style="color: green"><%= notice %></p>
<div class="flex justify-between items-center mb-5">
  <h1 class="main-title"><%= @budget.title %></h1>
  <div class="flex justify-around items-center">
    <%= link_to "Edit this budget", edit_budget_path(@budget), class: "btn-primary" %>
    <%= button_to "Destroy this budget", @budget, method: :delete, class: "btn-primary bg-red-600 ml-3" %>
  </div>
</div>
<div class="grid grid-cols-2">
  <section class="p-2">
    <% if @budget.ready_to_budget_cents > 0 %>
      <div id="alert-1" class="flex p-4 mb-4 text-blue-800 rounded-lg bg-blue-50 dark:bg-gray-800 dark:text-blue-400" role="alert">
        <svg aria-hidden="true" class="flex-shrink-0 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path></svg>
        <span class="sr-only">Info</span>
        <div class="ml-3 text-sm font-medium">
          There are movements ready to budget <span class="font-semibold underline hover:no-underline">
            <%= humanized_money_with_symbol @budget.ready_to_budget %>
          </span>
        </div>
      </div>
    <% else %>
      <div id="alert-2" class="flex p-4 mb-4 text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
        <svg aria-hidden="true" class="flex-shrink-0 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path></svg>
        <span class="sr-only">Info</span>
        <div class="ml-3 text-sm font-medium">
          Your budget is overspent.  <span class="font-semibold underline hover:no-underline">
            <%= humanized_money_with_symbol @budget.ready_to_budget %>
          </span>
        </div>
      </div>
    <% end %>
    <div class="flex items-center mb-2">
      <h3 class="subtitle flex-1 min-w-[70%]">Categories</h3>
      <h5 class="grow-0 min-w-[15%] text-right">Assigned</h3>
      <h5 class="grow-0 min-w-[15%] text-right">Activity</h3>
    </div>
    <% @budget.categories.each do |category| %>
      <%= render category %>
    <% end %>
    <div class="flex justify-start gap-2 mt-4">
      <%= link_to "Create category", new_budget_category_path(@budget), class: "btn-primary" %>
    </div>
  </section>
  <section>
    <h3 class="mb-5 subtitle">Uncategorized movements</h3>
    <div class="relative overflow-x-auto">
      <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
          <tr>
            <th scope="col" class="px-6 py-3">
              Description
            </th>
            <th scope="col" class="px-6 py-3">
              Amount
            </th>
            <th scope="col" class="px-6 py-3">
              Category
            </th>
            <th scope="col" class="px-6 py-3">
              Date
            </th>
          </tr>
        </thead>
        <tbody>
          <% @budget.uncategorized_movements.each do |movement| %>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
              <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-normal dark:text-white">
                <%= movement.description %>
              </th>
              <td class="px-6 py-4">
                <%= humanized_money_with_symbol movement.amount %>
              </td>
              <%= form_for [movement.account, movement] do |f| %>
                <td class="px-6 py-4">
                  <%= f.collection_select(:category_id, @budget.categories, :id, :name, {prompt: true }, { onchange: 'this.form.submit()' }) %>
                </td>
                <td class="px-6 py-4">
                  <%= time_tag movement.created_at %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </section>
</div>
