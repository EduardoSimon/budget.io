<p style="color: green"><%= notice %></p>
<div class="flex justify-between items-center mb-5">
  <h1 class="main-title"><%= @budget.title %></h1>
  <div class="flex justify-around items-center">
    <%= link_to "Edit this budget", edit_budget_path(@budget), class: "btn-primary" %>
    <%= button_to "Destroy this budget", @budget, method: :delete, class: "btn-primary bg-red-600 ml-3" %>
  </div>
</div>
<div class="grid grid-cols-2">
  <section class="p-2">
    <div class="flex items-center mb-2">
      <h3 class="subtitle flex-1 min-w-[70%]">Categories</h3>
      <h5 class="grow-0 min-w-[15%] text-right">Assigned</h3>
      <h5 class="grow-0 min-w-[15%] text-right">Activity</h3>
    </div>
    <% @budget.categories.each do |category| %>
      <%= render category %>
    <% end %>
    <div class="flex justify-start gap-2 mt-4">
      <%= link_to "Create category", new_budget_category_path(@budget), class: "btn-primary" %>
    </div>
  </section>
  <section>
    <h3 class="mb-5 subtitle">Uncategorized movements</h3>
    <div class="relative overflow-x-auto">
      <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
          <tr>
            <th scope="col" class="px-6 py-3">
              Description
            </th>
            <th scope="col" class="px-6 py-3">
              Amount
            </th>
            <th scope="col" class="px-6 py-3">
              Category
            </th>
            <th scope="col" class="px-6 py-3">
              Date
            </th>
          </tr>
        </thead>
        <tbody>
          <% @budget.uncategorized_movements.each do |movement| %>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
              <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-normal dark:text-white">
                <%= movement.description %>
              </th>
              <td class="px-6 py-4">
                <%= humanized_money_with_symbol movement.amount %>
              </td>
              <%= form_for [movement.account, movement] do |f| %>
                <td class="px-6 py-4">
                  <%= f.collection_select(:category_id, Category.all, :id, :name, {prompt: true }, { onchange: 'this.form.submit()' }) %>
                </td>
                <td class="px-6 py-4">
                  <%= time_tag movement.created_at %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </section>
</div>
