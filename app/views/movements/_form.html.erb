<%= form_for [movement] do |f|%>
  <% if movement.errors.any? %>
    <div class="flex p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
      <svg aria-hidden="true" class="flex-shrink-0 inline w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path></svg>
      <span class="sr-only">Danger</span>
      <div>
        <span class="font-medium"><%= pluralize(movement.errors.count, "error") %> prohibited this movement from being saved:</span>
        <ul class="mt-1.5 ml-4 list-disc list-inside">
          <% movement.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div>
    <div class="mt-4 grid grid-cols-1 gap-6 sm:grid-cols-2">
      <div>
        <%= f.label :payer, class: "form-label" %>
        <%= f.text_field :payer, class: "form-input" %>
      </div>
      <div>
        <%= f.label :description, class: "form-label" %>
        <%= f.text_area :description, class: "form-input"  %>
      </div>
      <div>
        <%= f.label :amount, class: "form-label" %>
        <%= f.text_field :amount, class: "form-input"  %>
      </div>
      <div>
        <%= f.label :account, class: "form-label" %>
        <%= f.collection_select(:account_id, Account.all, :id, :name, {prompt: true }) %>
      </div>
      <div>
        <%= f.label :created_at, class: "form-label" %>
        <%= f.date_field :created_at, class: "form-input"  %>
      </div>
    </div>
    <div>
      <div class="flex justify-end mt-6">
      <%= f.submit "Submit", class: "btn-primary" %>
      </div>
    </div>
  </div>
<% end%>
